<resources>
    <!-- Color pallette -->
    <color name="white"             >#ffffff</color>
    <color name="black"             >#000000</color>
    <color name="simple_blue_500"   >#0099CC</color>
    <color name="simple_blue_A200"   >#22BBEE</color>

    <!-- Light theme -->
    <style name="AppTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/simple_blue_500</item>
        <item name="colorAccent">@color/simple_blue_A200</item>
        <item name="colorControlActivated">@color/simple_blue_A200</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/simple_blue_500</item>
        <item name="colorAccent">@color/simple_blue_A200</item>
        <item name="colorControlActivated">@color/simple_blue_A200</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleDark</item>
    </style>

    <!-- Black theme -->
    <style name="AppTheme.Black" parent="AppTheme">
        <item name="android:colorBackground">#FF000000</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Light dialog -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/simple_blue_A200</item>
        <item name="android:textColorPrimary">@+color/black</item>
        <item name="android:background">@+color/white</item>
    </style>

    <!-- Dark dialog -->
    <style name="AppCompatAlertDialogStyleDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@+color/white</item>
        <item name="android:background">@+color/black</item>
    </style>

</resources>
