<resources>
    <!-- Color pallette -->
    <color name="simple_primary_bright">#ff20b6e8</color>
    <color name="simple_primary">#ff1b98c1</color>
    <color name="simple_primary_dark">#ff157a9b</color> 

    <color name="simple_alpha33">#5520b6e8</color>
    <color name="simple_alpha_focus">#8820b6e8</color>

    <color name="simple_accent">#ff00b1ed</color> 
    <color name="simple_accent_dark">#ff0099cc</color>
    <!-- <color name="simple_accent_dark">#ff0089b7</color> -->

    <color name="white">#ffffff</color>
    <color name="black">#ff000000</color>
    <color name="gray95">#ff111111</color>
    <color name="gray87">#ff212121</color>
    <color name="gray81">#ff303030</color>

    <!-- Light theme -->
    <style name="AppTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
        <item name="colorAccent">@color/simple_accent</item>
        <item name="colorControlActivated">@color/simple_alpha_focus</item>
        <item name="colorControlHighlight">@color/simple_alpha33</item> <!-- This isn't working right now, I think. -->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
        <item name="colorAccent">@color/simple_accent</item>
        <item name="colorControlActivated">@color/simple_alpha_focus</item>
        <item name="colorControlHighlight">@color/simple_alpha33</item> 
        <item name="android:textColorPrimary">@color/white</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleDark</item>
    </style>

    <!-- Black theme -->
    <style name="AppTheme.Black" parent="AppTheme">
        <item name="colorPrimary">@color/gray95</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/simple_accent_dark</item>
        <item name="android:colorBackground">@color/gray81</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Light dialog -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/simple_accent</item>
        <item name="android:textColorPrimary">@+color/black</item>
        <item name="android:background">@+color/white</item>
    </style>

    <!-- Dark dialog -->
    <style name="AppCompatAlertDialogStyleDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/simple_accent</item>
        <item name="android:textColorPrimary">@+color/white</item>
        <item name="android:background">@+color/gray87</item>
    </style>

    <!-- Selection Toolbar -->
    <style name="simpleSelectionToolbar">
        <item name="android:background">@color/gray81</item>
    </style>
</resources>
