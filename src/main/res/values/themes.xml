<resources>
    <!-- Launch Screen -->
    <style name="LaunchScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
    </style>

    <!-- Light theme -->
    <style name="AppTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
        <item name="colorAccent">@color/simple_accent</item>
        <item name="colorControlActivated">@color/simple_alpha_focus</item>
            <!-- This isn't working right now, I think. -->
            <item name="colorControlHighlight">@color/simple_alpha33</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppTheme.Light.DarkActionBar.Settings" parent="AppTheme.Light.DarkActionBar">
        <item name="colorControlActivated">@color/simple_primary</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
        <item name="colorAccent">@color/simple_accent</item>
        <item name="colorControlActivated">@color/simple_alpha_focus</item>
        <item name="colorControlHighlight">@color/simple_alpha33</item> 
        <item name="android:textColorPrimary">@color/white</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleDark</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="colorControlActivated">@color/simple_primary</item>
    </style>

    <!-- Black theme -->
    <style name="AppTheme.Black" parent="AppTheme">
        <item name="colorPrimary">@color/gray95</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/simple_accent_dark</item>
        <item name="android:colorBackground">@color/gray81</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.Black.Settings" parent="AppTheme.Black">
        <item name="colorControlActivated">@color/simple_primary_dark</item>
    </style>

    <!-- Styles -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/simple_accent</item>
        <item name="android:textColorPrimary">@+color/black</item>
        <item name="android:background">@+color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyleDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/simple_accent</item>
        <item name="android:textColorPrimary">@+color/white</item>
        <item name="android:background">@+color/gray87</item>
    </style>

    <style name="SimpleSelectionToolbar">
        <item name="android:background">@color/gray81</item>
    </style>

</resources>
