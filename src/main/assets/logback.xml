<configuration>
    <appender name="LC" class="ch.qos.logback.classic.android.LogcatAppender">
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- active log file -->
        <file>log.txt</file>
        <encoder>
            <!-- see http://logback.qos.ch/manual/layouts.html#conversionWord for format -->
            <pattern>%d{HH:mm:ss.SSS};%relative;[%thread];%level;%logger;%msg%n;%caller{1};%n%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>log.%d.txt</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 100MB -->
                <maxFileSize>500KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- keep 2 days' worth of history -->
            <maxHistory>2</maxHistory>
        </rollingPolicy>
    </appender>

    <root level="DEBUG" >
        <appender-ref ref="FILE" />
        <appender-ref ref="LC" />
        <!-- <appender-ref ref="DB" /> -->
    </root>
</configuration>