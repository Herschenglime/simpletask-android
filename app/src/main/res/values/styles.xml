<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppCompatAlertDialogStyle" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppCompatAlertDialogStyleDark" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
        <item name="android:background">@color/gray87</item>
    </style>

    <style name="SimpleToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="SimpleSelectionBar" parent="SimpleToolbar">
        <item name="android:background">@color/gray74</item>
    </style>

    <style name="DarkPopupMenu" parent="@style/Theme.AppCompat">
        <item name="android:popupBackground">@color/gray87</item>
    </style>

    <style name="BlackPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/gray87</item>
    </style>
</resources>
